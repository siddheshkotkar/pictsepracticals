#include<iostream>
using namespace std;
template <class T>
class sort
{
public:
	int n,min;
	T arr[n];


	void sort1()
	{
		for(int i=0;i<n;i++)
		{
			for(int j=i+1;i<n;i++)
			{
				if(arr[j]<arr[i])
				min=j;
			}
			int temp;
			temp=arr[i];
			arr[i]=arr[min];
			arr[min]=temp;
		}
	}

	void showelements()
	{
		cout<<"Sorted array is:"<<endl;
		for(int i=0;i<n;i++)
		{
			cout<<arr[i];
		}
	}
};

int main()
{
	sort<int> s1;
	sort<float> s2;
	int n;
	cout<<"MENU"<<endl;
	cout<<"1.Sort integer array"<<endl;
	cout<<"2.Sort float array"<<endl;
	cout<<"3.Exit"<<endl;
	cout<<"Enter your choice:"<<endl;
	int op;
	cin>>op;
	bool isexit=false;
	while(isexit!=true)
	{
	switch(op)
	{
	case 1:
		cout<<"Enter the number of elements:"<<endl;
		cin>>n;
		for(int i=0;i<n;i++)
		{
			cin>>s1.arr[i];
		}
		s1.sort1();
		s1.showelements();
		break;
	case 2:
		cout<<"Enter the number of elements:"<<endl;
		cin>>n;
		for(int i=0;i<n;i++)
		{
			cin>>s2.arr[i];
		}
		s2.sort1();
		s2.showelements();
		break;
	case 3:
		isexit=true;
		break;

	}
	}
}
