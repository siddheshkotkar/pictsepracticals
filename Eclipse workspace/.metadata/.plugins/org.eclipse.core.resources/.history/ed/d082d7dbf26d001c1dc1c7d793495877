#include<iostream>
using namespace std;
#include<stack>
class intopos
{
public:
	int prec(char c)
	{
		if(c=='^')
		{
			return 3;

		}
		else if(c=='/' || c=='*')
		{
			return 2;
		}
		else if(c=='+' || c=='-')
		{
			return 1;
		}
		else
		{
			return -1;
		}
	}
	string infixtopostfix(string s)
	{
		stack<char> st;
		string res;
		for(int i=0;i<s.length();i++)
		{
			if((s[i]>='a' && s[i]<='z') || (s[i]>='A' && s[i]<='Z'))
			{
				res+=s[i];
			}
			else if(s[i]=='(')
			{
				st.push(s[i]);
			}
			else if(s[i]==')')
			{
				while(!st.empty() && st.top()!='(')
				{
					res+=st.top();
					st.pop();
				}
				if(!st.empty())
				{
					st.pop();
				}
			}
			else
			{
				while(!st.empty() && prec(st.top())>prec(s[i]))
				{
					res+=st.top();
					st.pop();
				}
				st.push(s[i]);
			}

		}
		while(!st.empty())
		{
			res+=st.top();
			st.pop();
		}
		return res;

	}

};
int main()
{
	intopos in;
	string expr;
	int ch;
	do{
		cout<<"MENU\n"<<"1.Convert expression\n"<<"2.Exit\n"<<"Enter your choice:\n";
		cin>>ch;
		switch(ch)
		{
		case 1:
			cout<<"\nEnter expression:\n";
			cin>>expr;
			cout<<"\n Postfix expression is: "<<in.infixtopostfix(expr);
			cout<<endl;
			break;
		case 2:
			break;
		}
	}while(ch!=2);
}
