#include<iostream>
using namespace std;
class complex
{
public:
	float x,y;//Complex number elements i.e real and imaginary part
	complex()
	{
		x=0;//real part
		y=0;//imaginary part
	}

	complex operator+(complex a)
	{
		complex local;
		local.x=a.x+x;
		local.y=a.y+y;
		return local;
	}

	complex operator*(complex a)
	{
		complex local;
		local.x=a.x*x;
		local.y=a.y*y;
		return local;
	}

	friend istream &operator>>(istream &ip, complex &a)
	{
		cout<<"Enter the real part:";
		ip>>a.x;
		cout<<"Enter the imaginary part:";
		ip>>a.y;
		return ip;
	}

	friend ostream &operator<<(ostream &op,complex &a)
	{
		op<<a.x<<"+"<<a.y<<"i"<<endl;
		return op;
	}




};

int main()
{
	complex c1,c2,c3,c4;
	cin>>c1;
	cin>>c2;
	c3=c1+c2;
	cout<<c3;
	c4=c1*c2;
	cout<<c4;
}
